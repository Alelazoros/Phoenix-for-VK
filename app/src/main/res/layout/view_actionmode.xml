<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="40dp"
    app:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/buttonClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="12dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/close"
            android:padding="8dp"
            android:src="?attr/toolbarCloseIcon" />

        <TextView
            android:id="@+id/actionModeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="72dp"
            android:layout_toStartOf="@+id/options"
            android:text="@string/button_1"
            android:textSize="@dimen/font_size_title" />

        <LinearLayout
            android:id="@+id/options"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/buttonEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/edit"
                android:padding="8dp"
                android:src="?attr/toolbarEditIcon" />

            <ImageView
                android:id="@+id/buttonPin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/pin"
                android:padding="8dp"
                android:src="?attr/toolbarPinIcon" />

            <ImageView
                android:id="@+id/buttonForward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/forward"
                android:padding="8dp"
                android:src="?attr/toolbarForwardIcon" />

            <ImageView
                android:id="@+id/buttonCopy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/copy"
                android:padding="8dp"
                android:src="?attr/toolbarCopyIcon" />

            <ImageView
                android:id="@+id/buttonDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/delete"
                android:padding="8dp"
                android:src="?attr/toolbarDeleteIcon" />

        </LinearLayout>

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>