<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Base.App.DayNight" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:statusBarColor">?android:colorBackground</item>
        <item name="android:navigationBarColor" tools:targetApi="o_mr1">?android:colorBackground
        </item>
        <item name="android:navigationBarDividerColor" tools:targetApi="o_mr1">?dividerColor</item>
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeBackground">?attr/colorPrimary</item>
        <item name="statusbarNonColoredColor">#000</item>
        <item name="toolbarElevation">@dimen/toolbar_with_elevation</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
    </style>

    <style name="App.DayNight" parent="Base.App.DayNight">
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>
        <item name="android:windowLightStatusBar" tools:targetApi="o_mr1">false</item>
        <item name="android:colorBackground">#1F2226</item>

        <item name="colorPrimary">#3F51B5</item>
        <item name="colorPrimaryVariant">#FF3F51B5</item>
        <item name="colorSecondary">#FF3F51B5</item>
        <item name="colorSecondaryVariant">#FF3F51B5</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="colorOnSecondary">#FFFFFF</item>
        <item name="colorOnBackground">#FFFFFF</item>

        <item name="materialButtonStyle">@style/Widget.MaterialComponents.Button.OutlinedButton
        </item>
        <item name="materialCardViewStyle">@style/Theme.MaterialCardView</item>
        <item name="floatingActionButtonStyle">@style/Theme.FloatingActionButton</item>
        <item name="icon_color_active">#3F51B5</item>
        <item name="icon_color_static">#FFF</item>

        <item name="dividerColor">#313131</item>

        <item name="dialogs_unread_color">#40909090</item>
        <item name="navi_menu_selector">@drawable/list_selector_dark</item>

        <item name="messages_background_color">#151515</item>
        <item name="oval_avatar_background">@drawable/sel_button_round_4</item>
        <item name="message_unread_color">#f564b5f6</item>

        <item name="message_bubble_color">#30373F</item>

        <item name="toolbarDrawerIcon">@drawable/phoenix_drawer</item>
        <item name="toolbarBackIcon">@drawable/arrow_left</item>
        <item name="toolbarCloseIcon">@drawable/close</item>
        <item name="toolbarOKIcon">@drawable/check</item>
        <item name="toolbarPlusIcon">@drawable/plus</item>
        <item name="toolbarSearchIcon">@drawable/magnify</item>
        <item name="toolbarCopyIcon">@drawable/content_copy</item>
        <item name="toolbarDeleteIcon">@drawable/delete</item>
        <item name="toolbarUpIcon">@drawable/chevron_up</item>
        <item name="toolbarGraphicIcon">@drawable/chart_bar</item>
        <item name="toolbarEditIcon">@drawable/pencil</item>
        <item name="toolbarForwardIcon">@drawable/forward</item>
        <item name="toolbarLockIcon">@drawable/lock</item>
        <item name="toolbarLockPlusIcon">@drawable/ic_crypt_plus_white_vector</item>
        <item name="toolbarUnlockIcon">@drawable/unlock</item>
        <item name="toolbarDoubleUpIcon">@drawable/double_up</item>
        <item name="toolbarDoubleDownIcon">@drawable/double_down</item>
        <item name="toolbarPinIcon">@drawable/pin</item>

        <item name="chat_background_cookies">@drawable/cookies_dark</item>
        <item name="chat_background_lines">@drawable/lines_dark</item>
        <item name="buttonAddPhotoBackground">@drawable/background_rectangle_dash</item>
    </style>

    <style name="QuickReply" parent="Theme.AppCompat.Dialog">
        <item name="android:background">#1F2226</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="oval_avatar_background">@drawable/sel_button_round_4</item>
        <item name="message_bubble_color">#151515</item>
        <item name="quick_reply_icon_color">#FFF</item>
        <item name="toolbarBackIcon">@drawable/arrow_left</item>
    </style>

</resources>