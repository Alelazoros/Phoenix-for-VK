<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="App.DayNight" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="android:navigationBarColor" tools:targetApi="o_mr1">@android:color/white</item>
        <item name="android:navigationBarDividerColor" tools:targetApi="o_mr1">#aaaaaa</item>

        <item name="colorPrimary">#FFF</item>
        <item name="colorPrimaryDark">#FFF</item>
        <item name="colorAccent">#233446</item>

        <item name="icon_color_active">#233446</item>
        <item name="icon_color_static">#757575</item>

        <item name="android:colorBackground">@android:color/background_light</item>

        <item name="windowActionModeOverlay">true</item>

        <item name="textColorPrimary">#de000000</item>
        <item name="textColorSecondary">#8a000000</item>
        <item name="textColorDisabled">#39000000</item>

        <item name="dialogs_unread_color">#20b0b0b0</item>
        <item name="navi_menu_selector">@drawable/list_selector_white</item>
        <item name="message_unread_color">#90234b81</item>
        <item name="list_divider_color">@color/light_divider_color</item>

        <item name="messages_background_color">#ECECEC</item>
        <item name="oval_avatar_background">@xml/sel_button_round_4_white</item>

        <item name="actionModeBackground">?attr/colorPrimary</item>

        <item name="message_bubble_color">@android:color/white</item>

        <item name="toolbarElevation">@dimen/toolbar_with_elevation</item>
        <item name="toolbarAppStyle">@style/Toolbar.White</item>
        <item name="toolbarPopupStyle">@style/ThemeOverlay.AppCompat.Light</item>

        <item name="toolbarDrawerIcon">@drawable/phoenix_drawer_grey600</item>
        <item name="toolbarBackIcon">@drawable/arrow_left_grey600</item>
        <item name="toolbarSearchIcon">@drawable/magnify_grey600</item>
        <item name="toolbarCopyIcon">@drawable/content_copy_grey600</item>
        <item name="toolbarDeleteIcon">@drawable/delete_grey600</item>
        <item name="toolbarUpIcon">@drawable/chevron_up_grey</item>
        <item name="toolbarGraphicIcon">@drawable/chart_bar_grey600</item>
        <item name="toolbarEditIcon">@drawable/pencil_grey600</item>
        <item name="toolbarForwardIcon">@drawable/forward_grey600</item>
        <item name="toolbarOKIcon">@drawable/check_grey600</item>
        <item name="toolbarCloseIcon">@drawable/close_grey600</item>
        <item name="toolbarPlusIcon">@drawable/ic_plus_gray</item>
        <item name="toolbarLockIcon">@drawable/lock_grey600</item>
        <item name="toolbarLockPlusIcon">@drawable/ic_crypt_plus_gray600_vector</item>
        <item name="toolbarUnlockIcon">@drawable/unlock_grey600</item>
        <item name="toolbarDoubleUpIcon">@drawable/double_up_grey600</item>
        <item name="toolbarDoubleDownIcon">@drawable/double_down_grey600</item>
        <item name="toolbarPinIcon">@drawable/ic_toolbar_pin_gray600</item>
        <item name="tabsTheme">@style/Theme.Tablayout.Dark</item>
        <item name="statusbarNonColoredColor">#000</item>

        <item name="chat_background_cookies">@drawable/cookies_white</item>
        <item name="chat_background_lines">@drawable/lines_white</item>

        <item name="buttonAddPhotoBackground">@drawable/background_rectangle_dash_inverse</item>
    </style>


    <style name="QuickReply" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="message_bubble_color">#ECECEC</item>
        <item name="oval_avatar_background">@xml/sel_button_round_4_white</item>
        <item name="quick_reply_icon_color">#151515</item>
        <item name="toolbarBackIcon">@drawable/arrow_left_grey600</item>
    </style>

    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>


    <style name="Theme.Title.Toolbar" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">20dp</item>
    </style>

    <style name="Theme.Subtitle.Toolbar" parent="TextAppearance.AppCompat.Widget.ActionBar.Subtitle">
        <item name="android:textSize">12dp</item>
    </style>

    <style name="Toolbar.White" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">#757575</item>
    </style>

    <style name="Theme.Tablayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">#757575</item>
        <item name="tabGravity">center</item>
        <item name="tabMode">fixed</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="android:bufferType">spannable</item>
    </style>


    <style name="Theme.Tablayout.Dark" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@android:color/white</item>
        <item name="tabGravity">center</item>
        <item name="tabMode">fixed</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="android:bufferType">spannable</item>
    </style>

</resources>
