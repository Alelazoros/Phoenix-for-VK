<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Base.App.DayNight" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:navigationBarColor" tools:targetApi="o_mr1">?android:colorBackground
        </item>
        <item name="android:navigationBarDividerColor" tools:targetApi="o_mr1">?dividerColor</item>
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeBackground">?attr/colorPrimary</item>
        <item name="statusbarNonColoredColor">#000</item>
        <item name="toolbarElevation">@dimen/toolbar_with_elevation</item>
    </style>

    <style name="App.DayNight" parent="Base.App.DayNight">
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>

        <item name="colorPrimary">#FFF</item>
        <item name="colorPrimaryDark">#FFF</item>
        <item name="colorAccent">#424242</item>

        <item name="icon_color_active">#233446</item>
        <item name="icon_color_static">#424242</item>

        <item name="dividerColor">#DADCE0</item>

        <item name="android:colorBackground">@android:color/background_light</item>

        <!--<item name="android:textColorPrimary">#212121</item>-->
        <!--<item name="android:textColorSecondary">#424242</item>-->

        <item name="dialogs_unread_color">#20b0b0b0</item>
        <item name="navi_menu_selector">@drawable/list_selector_white</item>
        <item name="message_unread_color">#90234b81</item>

        <item name="messages_background_color">#ECECEC</item>
        <item name="oval_avatar_background">@drawable/sel_button_round_4_white</item>

        <item name="message_bubble_color">@android:color/white</item>

        <item name="toolbarDrawerIcon">@drawable/phoenix_drawer_grey</item>
        <item name="toolbarBackIcon">@drawable/arrow_left_grey</item>
        <item name="toolbarSearchIcon">@drawable/magnify_grey</item>
        <item name="toolbarCopyIcon">@drawable/content_copy_grey</item>
        <item name="toolbarDeleteIcon">@drawable/delete_grey</item>
        <item name="toolbarUpIcon">@drawable/chevron_up_grey</item>
        <item name="toolbarGraphicIcon">@drawable/chart_bar_grey</item>
        <item name="toolbarEditIcon">@drawable/pencil_grey</item>
        <item name="toolbarForwardIcon">@drawable/forward_grey</item>
        <item name="toolbarOKIcon">@drawable/check_grey600</item>
        <item name="toolbarCloseIcon">@drawable/close_grey</item>
        <item name="toolbarPlusIcon">@drawable/ic_plus_gray</item>
        <item name="toolbarLockIcon">@drawable/lock_grey</item>
        <item name="toolbarLockPlusIcon">@drawable/ic_crypt_plus_gray600_vector</item>
        <item name="toolbarUnlockIcon">@drawable/unlock_grey</item>
        <item name="toolbarDoubleUpIcon">@drawable/double_up_grey</item>
        <item name="toolbarDoubleDownIcon">@drawable/double_down_grey</item>
        <item name="toolbarPinIcon">@drawable/pin_grey</item>

        <item name="chat_background_cookies">@drawable/cookies_white</item>
        <item name="chat_background_lines">@drawable/lines_white</item>

        <item name="buttonAddPhotoBackground">@drawable/background_rectangle_dash_inverse</item>
    </style>


    <style name="QuickReply" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="message_bubble_color">#ECECEC</item>
        <item name="oval_avatar_background">@drawable/sel_button_round_4_white</item>
        <item name="quick_reply_icon_color">#151515</item>
        <item name="toolbarBackIcon">@drawable/arrow_left_grey</item>
    </style>

    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Theme.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:gravity">center</item>
        <item name="android:tint">?colorAccent</item>
    </style>

    <style name="Theme.Toolbar.Photo" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:gravity">center</item>
        <item name="android:tint">#FFF</item>
        <item name="android:textColorPrimary">#FFF</item>
        <item name="popupTheme">@style/Widget.AppCompat.PopupMenu</item>
    </style>

    <style name="Theme.Tablayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabRippleColor">#424242</item>
        <item name="tabMode">scrollable</item>
        <item name="tabTextColor">?android:textColorPrimary</item>
        <item name="android:background">?colorPrimary</item>
    </style>

</resources>
