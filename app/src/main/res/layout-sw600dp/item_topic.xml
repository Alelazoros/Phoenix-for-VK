<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:background="?android:colorBackground"
    android:layout_height="wrap_content"
    android:layout_marginEnd="32dp"
    android:layout_marginStart="32dp"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:background="?attr/selectableItemBackground"
        android:layout_height="72dp"
        android:layout_width="fill_parent"
        android:minHeight="72dp">

        <ImageView
            android:gravity="center"
            android:id="@+id/item_topicstarter_avatar"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_height="42dp"
            android:layout_marginStart="16dp"
            android:layout_width="42dp"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_size_title" />

        <LinearLayout
            android:gravity="center_vertical"
            android:id="@+id/relativeLayout"
            android:layout_height="match_parent"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@id/item_topicstarter_avatar"
            android:layout_width="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_topic_title"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:maxLines="1"
                tools:text="Music Plug-in"
                android:textSize="@dimen/font_size_title" />

            <TextView
                android:id="@+id/item_topic_subtitle"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:maxLines="2"
                tools:text="17 May at 17:43 | 143 posts"
                android:textSize="@dimen/font_size_subtitle" />

        </LinearLayout>


    </RelativeLayout>

    <View
        android:background="?attr/dividerColor"
        android:layout_height="1dp"
        android:layout_width="match_parent" />

</LinearLayout>
